{
    "name": "supermarket-administration-system",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@sentry/nextjs": "^6.16.1",
        "next": "latest",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "4.0.3",
        "typescript": "^4.5.2",
        "web-vitals": "^1.1.2"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "build:static": "next build && next export",
        "start": "next start",
        "test": "jest",
        "lint:check": "eslint ./**/*.{js,jsx,ts,tsx,mjs}",
        "lint:fix": "npm run lint:check -- --fix",
        "prettier:check": "prettier --check ./**/*.{js,jsx,ts,tsx,mjs}",
        "prettier:fix": "prettier --write ./**/*.{js,jsx,ts,tsx,mjs}",
        "prepare": "husky install",
        "generate-fake-data": "node ./scripts/faker.mjs",
        "mock-server": "json-server --watch db.json --port=3004"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@netlify/plugin-nextjs": "^4.1.1",
        "@next/eslint-plugin-next": "^12.0.7",
        "@testing-library/jest-dom": "^5.15.0",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.9",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "autoprefixer": "^10.4.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^19.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-react-hooks": "^4.3.0",
        "faker": "^5.5.3",
        "husky": "^7.0.4",
        "json-server": "^0.17.0",
        "lint-staged": "^12.1.2",
        "netlify-cli": "^8.4.2",
        "postcss": "^8.4.4",
        "prettier": "^2.4.1",
        "tailwindcss": "^3.0.0",
        "typescript": "^4.5.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,mjs}": [
            "eslint --fix",
            "prettier --write",
            "eslint --max-warnings 0",
            "prettier --check"
        ],
        "*.json": [
            "prettier --write",
            "prettier --check"
        ]
    }
}
